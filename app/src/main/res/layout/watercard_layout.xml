<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/cardView"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <RelativeLayout
        android:id="@+id/linearCardLayout"
        android:layout_width="55dp"
        android:layout_height="68dp">


        <ImageView
            android:id="@+id/emptyGlass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:visibility="visible"
            app:srcCompat="@mipmap/emptyglass" />

        <ImageView
            android:id="@+id/fullGlass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="28dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/emptyglass" />

        <ImageView
            android:id="@+id/plusButtonItem"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="27dp"
            android:visibility="visible"
            app:srcCompat="@mipmap/plusbutton" />

        <ImageView
            android:id="@+id/greenTick"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="27dp"
            android:visibility="invisible"
            app:srcCompat="@mipmap/greentick" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>